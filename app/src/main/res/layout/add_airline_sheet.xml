<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_back"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="Add new airline"/>

        <EditText
            android:id="@+id/airline_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/borders"
            android:gravity="top"
            android:hint="Airline name"
            android:padding="15dp" />
        <EditText
            android:id="@+id/airline_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/borders"
            android:gravity="top"
            android:hint="Airline country"
            android:padding="15dp" />
        <EditText
            android:id="@+id/airline_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/borders"
            android:gravity="top"
            android:hint="Airline logo"
            android:padding="15dp" />
        <EditText
            android:id="@+id/airline_slogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/borders"
            android:gravity="top"
            android:hint="Airline slogan"
            android:padding="15dp" />
        <EditText
            android:id="@+id/airline_head_quaters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/borders"
            android:gravity="top"
            android:hint="Airline head quaters"
            android:padding="15dp" />
        <EditText
            android:id="@+id/airline_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/borders"
            android:gravity="top"
            android:hint="Airline website"
            android:padding="15dp" />
        <EditText
            android:id="@+id/airline_established"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/borders"
            android:gravity="top"
            android:hint="Airline established year"
            android:padding="15dp" />
        <com.google.android.material.button.MaterialButton
            android:layout_marginHorizontal="20dp"
            android:id="@+id/confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:text="Confirm"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:backgroundTint="@color/colorPrimaryDark"
            app:cornerRadius="5dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_btn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/white"
            android:text="Cancel"
            android:textColor="@color/gray"
            android:textSize="17sp"
            android:textAllCaps="false"
            app:cornerRadius="5dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/gray" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
